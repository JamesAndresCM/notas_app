<div class="shadow-card card col-lg-8 mt-4 center">
  <div class="card-header style-header-card">
    <h4>Editar Mis Datos</h4>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="card">
        <div class="card-body row center">
          <%= image_tag(current_user.avatar.url, alt: "#{current_user.username}" , title: "#{current_user.username}", id: 'img_prev', class:"img-fluid mt-2 avatar_profile") %>
        </div>
        <div class="custom-file mb-4 upload-img" id="customFile" lang="es">
          <%= f.file_field :avatar, class:'form-control custom-file-input', id: 'avatar-upload' %>
          <label class="mt-2 custom-file-label">
            Avatar
          </label>
        </div>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.input :username, label: "Nombre de usuario",disabled: true, hint: 'El nombre de usuario no se puede cambiar.' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :email, required: true %>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <div class="form-row">
        <div class="form-group col-md-6">
        <%= f.input :password,label: "Contrase単a", autocomplete: "off", hint: "Deja este campo en blanco si no quieres cambios", required: false %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :password_confirmation, label: "Confirmar Contrase単a", required: false %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-8">
          <%= f.input :current_password,label: "Contrase単a Actual", hint: "Necesitas tu contrase単a actual para los cambios", required: true %>
        </div>
      </div>
      <%= f.button :submit, "Actualizar Cuenta" , class: 'btn-block btn btn-success'%>
    <% end %>
  </div>
</div>

